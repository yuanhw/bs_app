<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/split"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/detail_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/back"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/text_title_size"
                android:textColor="@color/account_line"
                android:text="个人信息"/>
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/bottom_color"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/detail_item1"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="55dp">
            <TextView
                android:id="@+id/detail_tmp_1"
                android:layout_centerVertical="true"
                android:layout_width="90dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:text="头像"/>
            <LinearLayout
                android:layout_toRightOf="@id/detail_tmp_1"
                android:layout_width="match_parent"
                android:gravity="right"
                android:paddingRight="40dp"
                android:layout_height="match_parent">
                <cn.wyh.bs.custom.CircleImageView
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/detail_tmp_1"
                    android:id="@+id/detail_tou_img"
                    android:layout_gravity=""
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/tou_img"/>
            </LinearLayout>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@mipmap/forward"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/account_line"/>
        <RelativeLayout
            android:id="@+id/detail_item2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="55dp">
            <TextView
                android:id="@+id/detail_tmp_2"
                android:layout_marginLeft="20dp"
                android:layout_width="90dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:text="昵称"/>
            <TextView
                android:id="@+id/detail_name"
                android:layout_toRightOf="@id/detail_tmp_2"
                android:layout_centerInParent="true"
                android:gravity="right"
                android:paddingRight="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="王远航"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@mipmap/forward"/>
        </RelativeLayout>
        <!-- -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/account_line"/>
        <RelativeLayout
            android:id="@+id/detail_item3"
