                android:layout_width="match_parent"
                android:gravity="right"
                android:paddingRight="40dp"
                android:layout_height="wrap_content"
                android:text="13588746259"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@mipmap/forward"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/account_line"/>
        <RelativeLayout
            android:id="@+id/detail_item4"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="55dp">
            <TextView
                android:id="@+id/detail_tmp_3_2"
                android:layout_marginLeft="20dp"
                android:layout_width="90dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:text="支付密码"/>
            <TextView
                android:inputType="textPassword"
                android:id="@+id/detail_pay_password"
                android:layout_toRightOf="@id/detail_tmp_3_2"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:gravity="right"
                android:paddingRight="40dp"
                android:layout_height="wrap_content"
                android:text="13588746259"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@mipmap/forward"/>
        </RelativeLayout>
        <!-- -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/account_line"/>
        <RelativeLayout
            android:id="@+id/detail_item5"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="55dp">
            <TextView
                android:id="@+id/detail_tmp_3_3"
                android:layout_marginLeft="20dp"
                android:layout_width="90dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:text="性别"/>
            <TextView
                android:id="@+id/detail_gender"
                android:layout_toRightOf="@id/detail_tmp_3_3"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:gravity="right"
                android:paddingRight="40dp"
                android:layout_height="wrap_content"
                android:text="男"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@mipmap/forward"/>
        </RelativeLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/account_line"/>
        <RelativeLayout
            android:id="@+id/detail_item6"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="58dp">
            <TextView
                android:id="@+id/detail_tmp_3"
                android:layout_marginLeft="20dp"
                android:layout_width="90dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:text="手机号码"/>
            <TextView
                android:id="@+id/detail_phone"
                android:layout_toRightOf="@id/detail_tmp_3"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:gravity="right"
                android:paddingRight="40dp"
                android:layout_height="wrap_content"
                android:text="13588746259"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@mipmap/forward"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>