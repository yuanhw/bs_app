<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/back_o1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/back"/>
            <TextView
                android:id="@+id/f_detail_fmTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/text_title_size"
                android:textColor="@color/account_line"
                android:text="确认订单"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:background="@mipmap/bg_1"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="38dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp">
            <TextView
                android:textSize="16dp"
                android:text="订单编号"
                android:gravity="center_vertical"
                android:textColor="@color/text_primary"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:gravity="right|center_vertical"
                android:id="@+id/o_block_id"
                android:text="order123456789"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@color/account_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <TextView
                android:textSize="16dp"
                android:text="农场名称"
                android:gravity="center_vertical"
                android:textColor="@color/text_primary"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/o_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:text="15号私家农场" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp">
            <TextView
                android:textSize="16dp"
                android:text="农场地址"
                android:gravity="center_vertical"
                android:textColor="@color/text_primary"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:gravity="right|center_vertical"
                android:id="@+id/o_address"
                android:text="浙江省杭州市"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp">
            <TextView
                android:textSize="16dp"
                android:text="地块类型"
                android:gravity="center_vertical"
                android:textColor="@color/text_primary"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <LinearLayout
                android:gravity="right|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Spinner
                    android:id="@+id/o_block_type2"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"></Spinner>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@color/account_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <TextView
                android:textSize="16dp"
                android:text="规格"
                android:gravity="center_vertical"
                android:textColor="@color/text_primary"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/o_spec"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:gravity="right|center_vertical"
                android:text="20平米" />
            <TextView
                android:textSize="16dp"
                android:text="数量"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/text_primary"
                android:layout_width="65dp"
                android:layout_height="match_parent" />
            <cn.wyh.bs.custom.AmountView
                android:id="@+id/o_num"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                app:btnTextSize="16sp"
                app:btnWidth="23dp"
                app:tvWidth="30dp"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:textSize="16dp"
                android:text="个"
                android:textColor="@color/text_primary"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="38dp">
            <TextView
                android:textSize="16dp"
                android:text="单价"
                android:gravity="center_vertical"
                android:textColor="@color/text_primary"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:gravity="right|center_vertical"
                android:id="@+id/o_unit_price"
                android:text="87元"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_width="130dp"
                android:layout_height="match_parent" />
            <TextView
                android:textSize="16dp"
                android:text="租期"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/text_primary"
                android:layout_width="65dp"
                android:layout_height="match_parent" />
            <cn.wyh.bs.custom.AmountView
                android:id="@+id/o_time"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                app:btnTextSize="16sp"
                app:btnWidth="23dp"
                app:tvWidth="30dp"/>
            <TextView
                android:id="@+id/o_lease_unit"
                android:layout_marginLeft="5dp"
                android:text="月"
                android:textSize="16dp"
                android:textColor="@color/text_primary"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/proxy_view"
        android:visibility="gone"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="38dp">
        <TextView
            android:textSize="16dp"
            android:text="代种单价"
            android:gravity="center_vertical"
            android:textColor="@color/text_primary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:gravity="right|center_vertical"
            android:id="@+id/proxy"
            android:text="87元"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_width="98dp"
            android:layout_height="match_parent" />
        </LinearLayout>
    <LinearLayout
        android:background="@color/account_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="38dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp">
            <TextView
                android:textSize="16dp"
                android:text="订单金额"
                android:gravity="center_vertical"
                android:textColor="@color/text_primary"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:gravity="right|center_vertical"
                android:id="@+id/o_amount"
                android:text="600元"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@color/account_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="bottom"
            android:background="@color/bottom_color"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/o_amount_2"
                android:text="600元"
                android:layout_weight="4"
                android:textSize="16dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/o_submit"
                android:text="提交订单"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="@color/bottom_color"
                android:background="@color/lv_2"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>