<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/top_main_place_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/top_main_city_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="不限"
                    android:textColor="@color/account_line"
                    android:gravity="center"/>
                <ImageView
                    android:layout_marginLeft="3dp"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_drop_down1"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.SearchView
                    android:id="@+id/search_1"
                    android:layout_marginLeft="62dp"
                    android:layout_marginRight="45dp"
                    android:background="@color/account_line"
                    android:layout_width="match_parent"
                    android:layout_height="37dp">
                </android.support.v7.widget.SearchView>
            </LinearLayout>
            <LinearLayout
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:id="@+id/back_3"
                    android:src="@mipmap/back3"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <TextView
            android:id="@+id/tv2"
            android:text="总共10条记录"
            android:textSize="12dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="19dp" />
        <TextView
            android:layout_marginLeft="82dp"
            android:text="价格"
            android:textSize="12dp"
            android:textColor="@color/colorPrimary"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="19dp" />
        <ImageView
            android:id="@+id/show_px_1"
            android:layout_marginLeft="110dp"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@mipmap/jx_1"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lease_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>