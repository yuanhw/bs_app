<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="35dp">
        <TextView
            android:id="@+id/o_all_farm_name"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:text="15号私家农场"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/o_all_status"
            android:layout_width="match_parent"
            android:textSize="12sp"
            android:textColor="@color/red"
            android:text="交易成功"
            android:gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/split"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <ImageView
            android:id="@+id/o_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ad_img2" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/o_id"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号：o123456789"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/o_amt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单金额：￥85"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/o_je"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款金额：￥70"
                    android:textSize="12sp" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/o_all_create_t"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="申请时间：2018年4月8日"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="35dp">
        <TextView
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginLeft="15dp"
            android:id="@+id/o_all_del"
            android:layout_width="58dp"
            android:textSize="12sp"
            android:text="删除"
            android:layout_height="25dp" />
    </LinearLayout>
    <LinearLayout
        android:background="@color/split"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
</LinearLayout>